.Bulletin-board
  .Bulletin-board-area
    .Bulletin-board-area__post
      = render @messages
    .form
      = form_for [@messages] do |f|
        = f.text_field :body, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'


  .Side-bar
    .Side-bar__switching-page
      .Side-bar__switching-page--Group-edit-button
        = link_to edit_group_path(current_user) do
          =icon('fas', 'fas fa-user-edit fa-lg', class: 'icon')
      .Side-bar__switching-page--Group-chat-button
        = link_to groups_path(current_user) do
          =icon('fas', 'fas fa-user-friends fa-lg', class: 'icon')
      .Side-bar__switching-page--My-profile-button
        = link_to users_path(current_user) do
          =icon('fas', 'far fa-address-card fa-lg', class: 'icon')
      .Side-bar__switching-page--Another-group-button
        = link_to groups_path(current_user) do
          =icon('fas', 'fas fa-user-plus fa-lg', class: 'icon')
      .Side-bar__switching-page--Bulletin-board-button
        = link_to groups_path(current_user) do
          =icon('fas', 'fas fa-th-list fa-lg', class: 'icon')
