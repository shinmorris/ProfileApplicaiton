.Bulletin-board
  .Bulletin-board-area
    .Bulletin-board-area__post
      .Bulletin-board-area__post-region
        .Bulletin-board-area__post-region--icon
          %p ●
        .Bulletin-board-area__post-region--icon-name
          = current_user.name
        .Bulletin-board-area__post-region--content
          %p 投稿内容
        .Bulletin-board-area__post-region--image
          画像
        .Bulletin-board-area__post-region--destroy-button
        | 削除 |
        .Bulletin-board-area__post-region--edit-button
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
        .Bulletin-board-area__post-region--reply-button
        | リプライボタン |
        .Bulletin-board-area__post-region--stamp
        | 😊スタンプ |

    .form
      = form_for [@message] do |f|
        = f.text_field :body, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'


  .Side-bar
    .Side-bar__switching-page
      .Side-bar__switching-page--Group-edit-button
        %a{href: "/groups/1/edit"}
          =icon('fas', 'fas fa-user-edit fa-lg', class: 'icon')
      .Side-bar__switching-page--Group-chat-button
        %p
          =icon('fas', 'fas fa-user-friends fa-lg', class: 'icon')
      .Side-bar__switching-page--My-profile-button
        %p
          =icon('fas', 'far fa-address-card fa-lg', class: 'icon')
      .Side-bar__switching-page--Another-group-button
        %p
          =icon('fas', 'fas fa-user-plus fa-lg', class: 'icon')
      .Side-bar__switching-page--Bulletin-board-button
        %p
          =icon('fas', 'fas fa-th-list fa-lg', class: 'icon')
